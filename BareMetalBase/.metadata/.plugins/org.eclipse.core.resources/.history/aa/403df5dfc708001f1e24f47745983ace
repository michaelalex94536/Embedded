/*
 * The user pushbutton is connected to PC13 - Port C, pin 13
 */

#include "stm32f4xx.h"

#define GPIOCEN			(1U << 2)
#define PIN13			(1U << 13)
#define PB_PIN			PIN13

int main(void)
{

	uint32_t = input_data;

	// Enable GPIOC clock
	RCC->AHB1ENR |= GPIOCEN;

	// Set Pin 13 as an input
	GPIOC->MODER &= ~(1U << 26);
	GPIOC->MODER &= ~(1U << 27);

	while(1)
	{
		input_data = GPIOC->(IDR & (1U << 13));
	}
}
